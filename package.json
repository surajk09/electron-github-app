{
  "name": "electron-github-app",
  "version": "1.0.0",
  "description": "Test electron js project",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.1.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.electron-github-app",
    "productName": "Electron GitHub App",
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "your.category.type"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "license": "license.txt"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "surajk09",
        "repo": "https://github.com/surajk09/electron-github-app.git",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.8"
  }
}
